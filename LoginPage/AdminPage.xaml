<Window x:Class="LoginPage.AdminPage" WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPage"
        mc:Ignorable="d"
        Title="AdminPage" Height="700" Width="1200" Loaded="Window_Loaded" MinHeight="700" MinWidth="1200"
        WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Grid>
            <Border CornerRadius="20" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>

                        <GradientStop Color="#F544E5" Offset="0.0"/>
                        <GradientStop Color="#73F5CF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Grid>
</Window>
    
